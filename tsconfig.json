	"compilerOptions": {
		"declaration": true,
		"declarationDir": "typings",
		"emitDeclarationOnly": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"checkJs": false
	},
	"extends": ["@tsconfig/strictest", "@tsconfig/node20"],
	"include": ["src", "scripts", "rollup.config.ts", "test"]
}
