{
	"$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
	"files": {
		"includes": ["**", "!**/test/legacy.cjs", "!**/api-extractor.json", "!.claude", "!**/package.json"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"domains": {
			"project": "recommended",
			"test": "recommended"
		},
		"rules": {
			"correctness": {
				"noNodejsModules": "off",
				"useImportExtensions": "off"
			},
			"style": {
				"useForOf": "off"
			},
			"suspicious": {
				"noMisplacedAssertion": "off"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}
