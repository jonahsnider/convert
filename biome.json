{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"files": {
		"ignore": [
			"dist",
			"node_modules",
			"src/generated",
			"test/legacy.cjs",
			"api-extractor.json",
			".rollup.cache",
			"docs",
			"temp",
			"docs_out"
		]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": {
				"all": false
			}
		}
	}
}
