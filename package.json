{
	"name": "convert",
	"version": "0.0.0-development",
	"description": "The smallest & fastest library for really easy, totally type-safe unit conversions in TypeScript & JavaScript",
	"keywords": [
		"convert",
		"convert-units",
		"unit-conversion",
		"uom",
		"metric",
		"imperial",
		"units",
		"unit",
		"measurement",
		"measure",
		"temperature",
		"mass",
		"weight",
		"length",
		"data"
	],
	"homepage": "https://convert.jonah.pw/",
	"repository": {
		"type": "git",
		"url": "http://github.com/jonahsnider/convert.git"
	},
	"license": "MIT",
	"author": {
		"name": "Jonah Snider",
		"email": "jonah@jonah.pw",
		"url": "https://jonah.pw"
	},
	"sideEffects": false,
	"type": "commonjs",
	"main": "dist/index.js",
	"module": "dist/convert.esm.mjs",
	"typings": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"analyze": "size-limit --why",
		"build": "tsdx build --format cjs,esm,umd; yarn rename-esm",
		"rename-esm": "mv ./dist/convert.esm.js ./dist/convert.esm.mjs; mv ./dist/convert.esm.js.map ./dist/convert.esm.mjs.map;",
		"compat": "es-check es3 dist/*.min.js",
		"docs": "typedoc",
		"lint": "tsdx lint",
		"size": "size-limit",
		"skip": "echo skip",
		"start": "tsdx watch --format cjs,esm,umd --onSuccess \"yarn rename-esm\"",
		"style": "prettier --check .",
		"test": "tsdx test"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "4.12.0",
		"@types/jest": "26.0.23",
		"@typescript-eslint/eslint-plugin": "4.27.0",
		"@typescript-eslint/parser": "4.27.0",
		"es-check": "5.2.3",
		"eslint-plugin-prettier": "3.4.0",
		"eslint-plugin-tree-shaking": "1.9.2",
		"eslint-plugin-tsdoc": "0.2.14",
		"prettier": "2.3.1",
		"prettier-config-xo": "1.0.4",
		"semantic-release": "17.4.4",
		"size-limit": "4.12.0",
		"ts-node": "10.0.0",
		"tsdx": "0.14.1",
		"tslib": "2.3.0",
		"typedoc": "0.20.37",
		"typescript": "4.3.2"
	},
	"size-limit": [
		{
			"brotli": true,
			"limit": "3.65 KiB",
			"path": "./dist/convert.cjs.production.min.js",
			"webpack": false
		},
		{
			"gzip": true,
			"limit": "4.05 KiB",
			"path": "./dist/convert.cjs.production.min.js",
			"webpack": false
		},
		{
			"brotli": true,
			"limit": "3.75 KiB",
			"path": "./dist/convert.umd.production.min.js",
			"webpack": false
		},
		{
			"gzip": true,
			"limit": "4.15 KiB",
			"path": "./dist/convert.umd.production.min.js",
			"webpack": false
		}
	]
}
