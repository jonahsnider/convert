{
	"name": "convert",
	"version": "7.0.0",
	"description": "The smallest & fastest library for really easy, totally type-safe unit conversions in TypeScript & JavaScript",
	"keywords": [
		"convert",
		"convert-units",
		"unit-conversion",
		"uom",
		"metric",
		"imperial",
		"units",
		"unit",
		"measurement",
		"measure",
		"temperature",
		"mass",
		"weight",
		"length",
		"data"
	],
	"homepage": "https://convert.js.org/",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jonahsnider/convert.git"
	},
	"license": "MIT",
	"author": {
		"name": "Jonah Snider",
		"email": "jonah@jonahsnider.com",
		"url": "https://jonahsnider.com"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./conversions": {
			"import": {
				"types": "./dist/conversions-entry.d.ts",
				"default": "./dist/conversions-entry.js"
			},
			"require": {
				"types": "./dist/conversions-entry.d.cts",
				"default": "./dist/conversions-entry.cjs"
			}
		}
	},
	"main": "./dist/index.cjs",
	"jsdelivr": "./dist/index.js",
	"unpkg": "./dist/index.js",
	"module": "./dist/index.js",
	"browser": "./dist/index.js",
	"react-native": "./dist/index.cjs",
	"typings": "./dist/index.d.ts",
	"files": [
		"dist/"
	],
	"scripts": {
		"benchmarks": "wireit",
		"build": "wireit",
		"build:ci": "wireit",
		"bundle": "wireit",
		"docs": "wireit",
		"generate": "wireit",
		"knip": "wireit",
		"lint": "wireit",
		"lint:fix": "wireit",
		"test": "wireit",
		"test:ci": "wireit",
		"test:dev": "wireit",
		"validate-api": "wireit",
		"validate-api:local": "wireit"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@codspeed/vitest-plugin": "5.2.0",
		"@jonahsnider/util": "13.0.0",
		"@microsoft/api-extractor": "7.57.6",
		"@size-limit/preset-small-lib": "12.0.0",
		"@tsconfig/node24": "24.0.3",
		"@tsconfig/strictest": "2.0.8",
		"@types/node": "24.10.14",
		"@vitest/coverage-v8": "4.0.18",
		"@vitest/ui": "^4.0.0",
		"bignumber.js": "9.3.1",
		"knip": "5.85.0",
		"size-limit": "12.0.0",
		"typedoc": "0.28.17",
		"typescript": "5.9.3",
		"vitest": "4.0.18",
		"wireit": "0.14.12",
		"zshy": "^0.7.0"
	},
	"packageManager": "yarn@4.12.0",
	"runkitExampleFilename": "./docs/runkit.js",
	"size-limit": [
		{
			"name": "ESM (brotli)",
			"path": "dist/index.js"
		},
		{
			"name": "ESM (gzip)",
			"path": "dist/index.js",
			"gzip": true
		},
		{
			"name": "CJS (brotli)",
			"path": "dist/index.cjs"
		},
		{
			"name": "CJS (gzip)",
			"path": "dist/index.cjs",
			"gzip": true
		}
	],
	"wireit": {
		"benchmarks": {
			"command": "vitest bench --run",
			"dependencies": [
				{
					"cascade": false,
					"script": "generate"
				}
			],
			"files": [
				"src/**/*.ts"
			]
		},
		"build": {
			"dependencies": [
				"bundle",
				"validate-api:local"
			]
		},
		"build:ci": {
			"dependencies": [
				"bundle",
				"validate-api"
			]
		},
		"bundle": {
			"command": "zshy -p tsconfig.build.json",
			"dependencies": [
				{
					"cascade": false,
					"script": "generate"
				}
			],
			"files": [
				"src/**/*.ts",
				"tsconfig.build.json"
			],
			"output": [
				"dist/"
			]
		},
		"docs": {
			"command": "typedoc src/index.ts --out docs_out",
			"dependencies": [
				{
					"cascade": false,
					"script": "generate"
				}
			],
			"files": [
				"src/**/*.ts"
			],
			"output": [
				"docs_out"
			]
		},
		"generate": {
			"clean": false,
			"command": "bun scripts/generate.ts -o src/generated/",
			"files": [
				"scripts/generate.ts",
				"src/generation/**/*.ts",
				"src/conversions/**/*.ts"
			],
			"output": [
				"src/generated"
			]
		},
		"knip": {
			"command": "knip",
			"dependencies": [
				{
					"cascade": false,
					"script": "generate"
				}
			],
			"output": []
		},
		"lint": {
			"command": "biome check --colors=force",
			"dependencies": [
				{
					"cascade": false,
					"script": "generate"
				}
			],
			"output": []
		},
		"lint:fix": {
			"command": "biome check --colors=force --write --unsafe",
			"dependencies": [
				{
					"cascade": false,
					"script": "generate"
				}
			]
		},
		"test": {
			"command": "vitest run",
			"dependencies": [
				{
					"cascade": false,
					"script": "generate"
				}
			],
			"files": [
				"src/**/*.ts"
			]
		},
		"test:ci": {
			"dependencies": [
				"build:ci",
				"knip",
				"lint",
				"test"
			]
		},
		"test:dev": {
			"command": "vitest --ui",
			"dependencies": [
				{
					"cascade": false,
					"script": "generate"
				}
			],
			"files": [
				"src/**/*.ts"
			],
			"service": true
		},
		"validate-api": {
			"clean": false,
			"command": "api-extractor run",
			"dependencies": [
				"bundle"
			],
			"files": [
				"api-extractor.json",
				"docs/convert.api.md"
			],
			"output": [
				"temp/convert.api.json",
				"temp/convert.api.md"
			]
		},
		"validate-api:local": {
			"clean": false,
			"command": "api-extractor run --local --verbose",
			"dependencies": [
				"bundle"
			],
			"files": [
				"api-extractor.json",
				"docs/convert.api.md"
			],
			"output": [
				"docs/convert.api.md",
				"temp/convert.api.json",
				"temp/convert.api.md"
			]
		}
	},
	"zshy": {
		"exports": {
			".": "./src/index.ts",
			"./conversions": "./src/conversions-entry.ts"
		},
		"noEdit": true
	}
}
